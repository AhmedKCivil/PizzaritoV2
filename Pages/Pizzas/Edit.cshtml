@page "{id:int}"
@model PizzaritoShop.Pages.Pizzas.EditModel

<h1>Edit Pizza</h1>

<!-- Display success message if available -->
<div id="successMessage" style="display: none; color: green; font-weight: bold;">
    @TempData["SuccessMessage"]
</div>

<form id="editPizzaForm" method="post">
    <div class="form-group">
        <label for="PizzaName">Pizza Name</label>
        <input asp-for="ProductDetails.Name" class="form-control" />
        <span asp-validation-for="ProductDetails.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="ProductDetails.Price" class="form-control" />
        <span asp-validation-for="ProductDetails.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageTitle">Image URL</label>
        <input asp-for="ProductDetails.ImageCover" class="form-control" />
        <span asp-validation-for="ProductDetails.ImageCover" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="saveButton">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const successMessage = document.getElementById('successMessage');

            if (successMessage && successMessage.textContent.trim()) {
                successMessage.style.display = "block";

                setTimeout(function () {
                    window.location.href = 'https://localhost:7136/Pizzas/Products';
                },);
            }
        });
    </script>
}
