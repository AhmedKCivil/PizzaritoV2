@page
@model PizzaritoShop.Pages.Forms.CustomPizzaModel
@{
}

<div class="container text-center">
    <h2>Please Customise Your Pizza</h2>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-lg-6 col-md-8 col-sm-10">

        <div class="form-group">
            <label asp-for="CustomPizza.PizzaName" class="form-label">Pizza Name:</label>
            <input type="text" asp-for="CustomPizza.PizzaName" class="form-control" placeholder="Give your Pizza a Name.." />
            <span asp-validation-for="CustomPizza.PizzaName" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="CustomPizza.StuffedCrust" class="form-check-input" />
            <label asp-for="CustomPizza.StuffedCrust" class="form-check-label">Stuffed Crust (+£4.50)</label>
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="CustomPizza.ThinCrispy" class="form-check-input" />
            <label asp-for="CustomPizza.ThinCrispy" class="form-check-label">Thin & Crispy (+£2.50)</label>
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="CustomPizza.Chicken" class="form-check-input" />
            <label asp-for="CustomPizza.Chicken" class="form-check-label">Chicken (+£6.50)</label>
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="CustomPizza.Pepperoni" class="form-check-input" />
            <label asp-for="CustomPizza.Pepperoni" class="form-check-label">Pepperoni (+£5.50)</label>
        </div>

        <div class="mt-4">
            <button class="btn btn-primary" type="submit">Add To Cart</button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
